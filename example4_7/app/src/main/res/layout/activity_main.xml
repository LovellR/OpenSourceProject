<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <CheckBox
        android:id="@+id/ChEna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="1dp"
        android:checked="false"
        android:text="Enabled 속성"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/CbCha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="Clickable 속성"
        app:layout_constraintStart_toStartOf="@+id/ChEna"
        app:layout_constraintTop_toBottomOf="@+id/ChEna" />

    <CheckBox
        android:id="@+id/CbRot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="45도 회전"
        app:layout_constraintStart_toStartOf="@+id/CbCha"
        app:layout_constraintTop_toBottomOf="@+id/CbCha" />

    <Button
        android:id="@+id/button2"
        android:layout_width="317dp"
        android:layout_height="56dp"
        android:layout_marginTop="272dp"
        android:backgroundTint="#838383"
        android:rotation="0"
        android:text="Button"
        android:clickable="false"
        android:enabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>